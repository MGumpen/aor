name: Enforce Update Branch for Main Merges

on:
  pull_request:
    branches:
      - main

jobs:
  enforce:
    runs-on: ubuntu-latest
    steps:
      - name: Check source branch
        run: |
          echo "PR from: ${{ github.head_ref }}"
          if [ "${{ github.head_ref }}" != "update" ]; then
            echo "‚ùå Only 'update' branch can be merged into main!"
            exit 1
          fi

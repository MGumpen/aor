@model AOR.Models.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "_LayoutLogIn";
}
<div class="text-center">
    <h1 class="display-4" style="margin-top: 50px;">Forgot Your Password?</h1>
    <p class="fs-2" style="margin-top: 20px;">Enter your email address below to reset your password.</p>
    
    <form method="post" class="mx-auto" style="max-width: 500px; sm:max-width: 80%; margin-top: 40px;">
        
        <!-- Feilmeldinger vises her -->
        <div asp-validation-summary="All" class="text-danger mb-3"></div>
        
        <div class="mb-4">
            <label asp-for="Email" class="form-label fs-4">Email Address</label>
            <input asp-for="Email"
                   class="form-control form-control-lg"
                   style="font-size: 1.2rem; padding: 15px;"
                   placeholder="Enter your email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <!-- Knapp for Ã¥ sende tilbakestillingslink -->
        <button type="submit" class="btn btn-primary btn-lg" 
                style="padding: 24px 100px; font-size: 30px; margin-top: 50px;">
            <span class="d-none d-md-inline">Send Reset Link</span>
            <span class="d-md-none" style="font-size: 1.4rem; padding: 8px 10px;">Send Reset Link</span>
        </button>
   
        <!-- Tilbake til LogIn siden knapp -->
        <div class="text-center" style="margin-top: 30px;">
            <a asp-controller="LogIn" asp-action="Index" class="link-primary">Back to Login</a>
        </div>
    </form>
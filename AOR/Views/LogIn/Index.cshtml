@model AOR.Models.LogInData
@{
    ViewData["Title"] = "Log In";
    Layout = "_LayoutLogIn";
}
<!-- Legger til tekst på førstesiden -->
<div class="text-center">
    <h1 class="display-4" style="margin-top: 50px;">Welcome to</h1>
    <h1 class="display-4">Aviation Obstacle Registration</h1>
    <p class="fs-2" style="margin-top: 20px;">Please log in to access the application</p>
    
    <form method="post" class="mx-auto" style="max-width: 500px; sm:max-width: 80%; margin-top: 40px;">
        
        <!-- Feilmeldinger vises her -->
        <!-- Kontrollere denne koden, og se om den er riktig, er laget med AI -->
        <div asp-validation-summary="All" class="text-danger mb-3"></div>
        
        <div class="mb-4">
            <label asp-for="Username" class="form-label fs-4">Username</label>
            <input asp-for="Username"
                   class="form-control form-control-lg"
                   style="font-size: 1.2rem; padding: 15px;"
                   placeholder="Username" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Password" class="form-label fs-4" style="margin-top: 30px;">Password</label>
            <input asp-for="Password" type="password"
                   class="form-control form-control-lg"
                   style="font-size: 1.2rem; padding: 15px;"
                   placeholder="Enter your password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        
        <!-- Knapp for å logge inn -->
        <button type="submit" class="btn btn-primary btn-lg " style="padding: 24px 100px; font-size: 30px; margin-top: 50px">Login</button>
   
                <!-- Forgot password knapp -->
        <div class="text-center" style="margin-top: 30px;">
            <a href="#" class="link-primary">Forgot your password?</a>
        </div>
    </form>
</div>

<!-- Kontrollere om denne koden er riktig, er laget med AI -->
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
        
</div>
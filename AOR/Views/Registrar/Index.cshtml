@model IEnumerable<AOR.Models.ObstacleData>
@{
    ViewData["Title"] = "Registrar - Home";
    Layout = "_Layout";
}

<h1>Welcome, Registrar</h1>
<p>This page is only accessible for users with the 'Registrar' role.</p>

<div class="container mt-4">
    <h2>Registered obstacles</h2>
    
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Height</th>
                <th>Created</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obstacle in Model)
            {
                <tr>
                    <td>@obstacle.ObstacleName</td>
                    <td>@obstacle.ObstacleType</td>
                    <td>@(obstacle.ObstacleHeight?.ToString("F1") ?? "N/A") m</td>
                    <td>@obstacle.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>@(obstacle.Status ?? "Pending")</td>
                    <td>
                        <a href="@Url.Action("Details", "Obstacle", new { id = obstacle.ObstacleId })" class="btn btn-info btn-sm me-1">
                            View details
                        </a>

                        @if (obstacle.Status != "Approved")
                        {
                            <form asp-action="Approve" asp-controller="Registrar" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@obstacle.ObstacleId" />
                                <button type="submit" class="btn btn-success btn-sm me-1">Approve</button>
                            </form>
                        }

                        @if (obstacle.Status != "Rejected")
                        {
                            <form asp-action="Reject" asp-controller="Registrar" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@obstacle.ObstacleId" />
                                <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


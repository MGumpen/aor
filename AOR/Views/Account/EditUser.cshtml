@model AOR.Models.NewUserViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Edit user";
    var isAdmin = User.IsInRole("Admin");
    var isCrew = User.IsInRole("Crew");
    var isReg = User.IsInRole("Registrar");
}

<section class="container align-content-center">
    <div class="site-header text-center mb-3">
        <h1 class="mb-0">Edit user</h1>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="EditUser" method="post" novalidate>
                @Html.AntiForgeryToken()

                <input asp-for="UserName" type="hidden" />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="FirstName" class="form-label">First name</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="LastName" class="form-label">Last name</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PhoneNumber" class="form-label">Phone number</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                @if (!isAdmin)
                {
                    <div class="mb-3">
                        <label asp-for="OldPassword" class="form-label">Old password</label>
                        <input asp-for="OldPassword" class="form-control" autocomplete="current-password" />
                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">New password</label>
                        <input asp-for="Password" class="form-control" autocomplete="new-password" />
                        <span class="form-text">Let the field be empty if you don't want to change password.</span>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label">Confirm password</label>
                        <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                }

                @if (isAdmin)
                {
                    <hr />
                    

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="OrgNr" class="form-label">Organization</label>
                        @if (Model.Organizations != null)
                        {
                            <select asp-for="OrgNr" asp-items="Model.Organizations" class="form-select">
                                <option value="">-- Choose organization --</option>
                            </select>
                        }
                        else
                        {
                            <select asp-for="OrgNr" class="form-select">
                                <option value="">No organizations available</option>
                            </select>
                        }
                        <span asp-validation-for="OrgNr" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Role</label>
                        @if (Model.Roles != null)
                        {
                            <div class="role-checkboxes">
                                @foreach (var r in Model.Roles)
                                {
                                    var isChecked = Model.RoleIds != null && Model.RoleIds.Contains(r.Value);
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="RoleIds" value="@r.Value" id="role_@r.Value" @(isChecked ? "checked" : "") />
                                        <label class="form-check-label" for="role_@r.Value">@r.Text</label>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="form-text">No roles available</div>
                        }
                        <span asp-validation-for="RoleIds" class="text-danger"></span>
                    </div>
                }

                <div class="d-flex justify-content-between mt-4">
                    <div>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                        @if (isAdmin)
                        {
                            <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
                        }
                        @if (isCrew)
                        {
                            <a asp-controller="Crew" asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
                        }
                        @if (isReg)
                        {
                            <a asp-controller="Registrar" asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
                        }
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
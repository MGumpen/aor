@{

    Layout = "_Layout";
    ViewData["Title"] = "Admin Dashboard";
}

    <div class="admin-wrapper">
        <h1>Admin Dashboard</h1>

        <div class="admin-container">
            <a class="admin-tile" href="@Url.Action("Map", "Admin")">Map</a>
            <a class="admin-tile" href="@Url.Action("Users", "Admin")">Users</a>
            <a class="admin-tile" href="@Url.Action("Statistics", "Admin")">Statistics</a>
            <a class="admin-tile" href="@Url.Action("PreviousReports", "Admin")">Previous Reports</a>
        </div>
    </div>

    <style>
    
    .admin-wrapper {
        display: flex;
        flex-direction: column;
        justify-content: center;    
        align-items: flex-start;       
        height: 100vh;
        padding-left: 35%;            
        background-color: #f8f9fa;
        text-align: center;
    }

    .admin-wrapper h1 {
        margin-bottom: 60px;
        font-size: 2.2rem;
        color: #333;
        text-align: left;
        width: 100%;
    }

    .admin-container {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 70px;                    
      
    }

    .admin-tile {
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        background-color: #007bff;
        color: white;
        text-decoration: none;
        font-size: 1.6rem;
        font-weight: 600;
        border-radius: 20px;
        width: 260px;
        height: 130px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        transition: all 0.2s ease-in-out;
    }

    .admin-tile:hover {
        background-color: #0056b3;
        transform: translateY(-5px);
        box-shadow: 0 12px 25px rgba(0, 0, 0, 0.25);
    }

    
    @media (max-width: 800px) {
        .admin-wrapper {
            align-items: center;      
            padding-left: 0;
        }

        .admin-container {
            grid-template-columns: 1fr;
            gap: 40px;
        }

        .admin-wrapper h1 {
            text-align: center;
        }
    }
    </style>

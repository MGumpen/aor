@model AOR.Models.ObstacleData

@{
    ViewData["Title"] = "Overview";
    Layout = "_Layout";
}
<style>
    .container {
        max-width: 720px;
        margin: 0 auto;
        background: #ffffff;
        border-radius: 24px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.08);
        padding: 24px;
        border: 1px solid #e5e7eb;
    }
    </style>

<section class="container">
    <div class="bg-white rounded-2xl shadow-sm ring-1 ring-gray-200 p-6 space-y-4">
        <header>
            <h1 class="text-2xl font-semibold">Overview</h1>
            <p class="text-gray-600 mt-1">Thank you for registering an obstacle!</p>
        </header>

        <dl class="grid grid-cols-1 sm:grid-cols-3 gap-4">
            <div class="sm:col-span-1">
                <dt class="text-sm font-medium">Obstacle Name</dt>
                <dd class="mt-1 text-base break-words">@Model.ObstacleName</dd>
            </div>
            <div class="sm:col-span-1">
                <dt class="text-sm font-medium text-gray-600">Height</dt>
                <dd class="mt-3 text-base">@Model.ObstacleHeight</dd>
            </div>
            <div class="sm:col-span-1">
                <dt class="text-sm font-medium text-gray-600">Description</dt>
                <dd class="mt-3 text-base break-words sm:col-span-3">@Model.ObstacleDescription</dd>
            </div>
        </dl>

        <div class="pt-2 mt-5">
            <a asp-controller="Crew" asp-action="Index"
               class="btn btn-primary">
                Back to Home
            </a>
        </div>
    </div>
</section>

@using AOR.Controllers
@inject Microsoft.AspNetCore.Identity.UserManager<AOR.Data.User> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AOR</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                @{
                    string homeController = "LogIn";
                    string homeAction = "Index";

                    // Hent roller fra Identity (database) for innlogget bruker
                    var roles = new List<string>();
                    string displayName = string.Empty;
                    if (User?.Identity?.IsAuthenticated == true)
                    {
                        var currentUser = await UserManager.GetUserAsync(User);
                        if (currentUser != null)
                        {
                            var userRoles = await UserManager.GetRolesAsync(currentUser);
                            roles = userRoles?.ToList() ?? new List<string>();

                            var fullName = $"{currentUser.FirstName} {currentUser.LastName}".Trim();
                            displayName = !string.IsNullOrWhiteSpace(fullName)
                                ? fullName
                                : (currentUser.Email ?? User.Identity?.Name ?? "User");
                        }

                        if (roles.Contains("Registrar"))
                        {
                            homeController = "Registrar";
                        }
                        else if (roles.Contains("Crew"))
                        {
                            homeController = "Crew";
                        }
                        else if (roles.Contains("Admin"))
                        {
                            homeController = "Admin";
                        }
                        else
                        {
                            homeController = "LogIn";
                        }
                    }
                }
                <a class="navbar-brand d-none d-md-inline" asp-area="" asp-controller="@homeController" asp-action="@homeAction">AOR - Aviation Obstacle Registration</a>
                <a class="navbar-brand d-md-none" asp-area="" asp-controller="@homeController" asp-action="@homeAction">AOR</a>
               
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>


                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav ms-auto fs-5">
                        @if (User?.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                @* Home-lenke per rolle *@
                                @if (roles.Contains("Registrar"))
                                {
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Registrar" asp-action="Index">Home</a>
                                }
                                else if (roles.Contains("Crew"))
                                {
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Crew" asp-action="Index">Home</a>
                                }
                                else if (roles.Contains("Admin"))
                                {
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Index">Home</a>
                                }
                            </li>
                            <li class="nav-item">
                                @if (roles.Contains("Crew"))
                                {
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Crew" asp-action="MyReports">My reports</a>
                                }
                            </li>
                            @* Erstatt separate Settings/Log out-lenker med en bruker-dropdown helt til høyre *@
                            <li class="nav-item dropdown ms-2">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <span class="me-2"><i class="fa-solid fa-user"></i></span>
                                    <span>@displayName</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="Settings" asp-action="Index">Settings</a>
                                    </li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-controller="LogIn" asp-action="Logout">Log out</a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

        
    <footer class="border-top footer fixed-bottom text-muted navbar-light bg-white box-shadow height: 16px">
        <div class="footer" style="display: flex; align-items: center; justify-content: space-between; padding: 0.5rem 10px;">
        <span>
            <span class="d-none d-md-inline">&copy; 2025 - AOR - Made in collaboration with Norsk Luftambulanse & Kartverket</span>
            <span class="d-md-none">&copy; 2025 - AOR</span>
        </span>
            <a asp-area="" asp-controller="Privacy" asp-action="Index">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

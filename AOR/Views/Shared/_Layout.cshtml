@using AOR.Controllers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AOR</title>
    <script type="importmap"></script>
   <!-- <script src="https://cdn.tailwindcss.com"></script>
    <script>
        // Optionally extend Tailwind (example keeps it minimal)
        tailwind.config = {
          theme: {
            extend: {
              container: { center: true, padding: { DEFAULT: '1rem', md: '1.5rem' } }
            }
          }
        }
    </script> -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AOR.styles.css" asp-append-version="true" /> 
    <!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet">

<!-- Font Awesome for ikoner -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                
               
                @{
                    string homeController = "LogIn";
                    string homeAction = "Index";
                    
                    if (User?.Identity?.IsAuthenticated == true)
                    {
                        if (User.IsInRole("Registerforer"))
                        {
                            homeController = "Registerforer";
                        }
                        else if (User.IsInRole("Crew"))
                        {
                            homeController = "Crew";
                        }
                        else if (User.IsInRole("Admin"))
                        {
                            homeController = "Admin";
                        }
                    }
                }
                <a class="navbar-brand" asp-area="" asp-controller="@homeController" asp-action="@homeAction">AOR - Aviation Obstacle Registration</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>


                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav ms-auto fs-5">

                            <li class="nav-item">
                            @if (User?.Identity?.IsAuthenticated == true)
                            {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Settings" asp-action="Index">Settings</a>
                        </li>
                        <li class="nav-item">
                            @if (User?.Identity?.IsAuthenticated == true)
                            {
                                @if (User.IsInRole("Registerforer"))
                                {
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Registerforer" asp-action="Index">Home</a>
                                }
                                else if (User.IsInRole("Crew"))
                                {
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Crew" asp-action="Index">Home</a>
                                }
                                else if (User.IsInRole("Admin"))
                                {
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Index">Home</a>
                                }
                                
                            }
                            else
                            {
                                
                            }
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="LogIn" asp-action="Logout">Log out</a>
                        </li>
                            }
                            
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

        
    <footer class="border-top footer text-muted navbar-light bg-white box-shadow mb-3" style="position: bottom: 0; width: 100%; height: 48px; z-index: 1000;">
        <div class="container py-4 flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between" style="height: 100%; display: flex; align-items: center;">
        <span>
            <!-- Full tekst på store skjermer -->
            <span class="d-none d-md-inline">&copy; 2025 - AOR - Made in collaboration with Norsk Luftambulanse & Kartverket</span>
            <!-- Forkortet tekst på små skjermer -->
            <span class="d-md-none">&copy; 2025 - AOR</span>
        </span>
            <a class="text-end" asp-area="" asp-controller="Privacy" asp-action="Index">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

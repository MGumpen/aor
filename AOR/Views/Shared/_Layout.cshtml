@using Microsoft.AspNetCore.Identity
@using AOR.Data
@using System.Text.Json
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@{
    var currentUser = await UserManager.GetUserAsync(User);
    var globalToastMessage = TempData["GlobalToastMessage"] as string;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - AOR</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

   

    @RenderSection("Styles", required: false)
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid header-bar">
            <div class="header-brand">
                @{
                    string homeController = "LogIn";
                    string homeAction = "Index";

                    if (User?.Identity?.IsAuthenticated == true)
                    {
                        var activeRole = User.FindFirst("ActiveRole")?.Value;
                        homeController = activeRole switch
                        {
                            "Admin" => "Admin",
                            "Crew" => "Crew",
                            "Registrar" => "Registrar",
                            _ => "LogIn"
                        };
                    }
                }
                <a class="navbar-brand d-none d-md-inline" asp-area="" asp-controller="@homeController" asp-action="@homeAction">AOR - Aviation Obstacle Registration</a>
                <a class="navbar-brand d-md-none" asp-area="" asp-controller="@homeController" asp-action="@homeAction">AOR</a>
            </div>

            <div class="header-actions">
                @if (User?.Identity?.IsAuthenticated == true && User.IsInRole("Crew"))
                {
                    <button id="last30DaysBtn" class="btn btn-outline-primary header-btn" onclick="toggleLast30Days()" style="display:none;">
                        <i class="fa fa-calendar-days me-1"></i>
                        <span>Last 30 Days</span>
                    </button>
                }
                @if (User?.Identity?.IsAuthenticated == true && User.IsInRole("Crew"))
                {
                    <button id="themeToggleBtn" class="btn btn-outline-secondary header-btn" onclick="toggleTheme()" title="Switch theme">
                        <i class="fa fa-moon" id="themeIcon"></i>
                    </button>
                }

                <ul class="navbar-nav user-nav">
                    @if (User?.Identity?.IsAuthenticated == true)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa fa-user-sun"></i>
                                <span class="d-inline d-sm-none">@currentUser?.FirstName</span>
                                <span class="d-none d-sm-inline">@($"{currentUser?.FirstName} {currentUser?.LastName}")</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                               
                                @if (User.IsInRole("Crew"))
                                {
                                    <li>
                                        <a class="dropdown-item" asp-controller="Report" asp-action="MyReports">My
                                            reports</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Obstacle" asp-action="AllObstacles">All
                                            obstacles</a>
                                    </li>
                                    <li>
                                        <hr class="dropdown-divider"/>
                                    </li>
                                }
                                <li>
                                    <a asp-controller="Account" asp-action="EditUser" class="dropdown-item">Edit user</a>
                                </li>
                                <li>
                                    <hr class="dropdown-divider"/>
                                </li>
                                <li>
                                    <form asp-controller="LogIn" asp-action="Logout" method="post" class="px-3" onsubmit="localStorage.removeItem('aor_welcome_shown'); localStorage.removeItem('theme');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-link dropdown-item p-0 text-start">
                                            <i class="fa fa-sign-out-alt me-2"></i> Log out
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>
    @if (ViewContext.RouteData.Values["controller"]?.ToString() == "Crew" && ViewContext.RouteData.Values["action"]?.ToString() == "Index")
    {
        <div class="crew-layout-wrapper">
            <main role="main" class="pb-0">
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-info alert-dismissible fade show" role="alert">
                        @TempData["Message"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @RenderBody()
            </main>
        </div>
    }
    else
    {
        <div class="container">
            <main role="main" class="pb-3">
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-info alert-dismissible fade show" role="alert">
                        @TempData["Message"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @RenderBody()
            </main>
        </div>
    }


<footer class="border-top footer fixed-bottom text-muted navbar-light bg-white box-shadow height: 16px">
    <div class="footer" style="display: flex; align-items: center; justify-content: space-between; padding: 0.5rem 10px;">
        <span>
            <span class="d-none d-md-inline">&copy; 2025 - AOR - Made in collaboration with Norsk Luftambulanse & Kartverket</span>
            <span class="d-md-none">&copy; 2025 - AOR</span>
        </span>
        <a asp-area="" asp-controller="Privacy" asp-action="Index">Privacy</a>
    </div>
</footer>
<div id="globalToast" class="form-toast-notification" aria-live="polite" aria-atomic="true"></div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

<script>
    function toggleTheme() {
        const body = document.body;
        const icon = document.getElementById('themeIcon');
        const btn = document.getElementById('themeToggleBtn');
        
        if (body.classList.contains('dark-mode')) {
            body.classList.remove('dark-mode');
            if (icon) {
                icon.classList.remove('fa-sun');
                icon.classList.add('fa-moon');
            }
            if (btn) {
                btn.setAttribute('title', 'Switch to dark mode');
            }
            localStorage.setItem('theme', 'light');
        } else {
            body.classList.add('dark-mode');
            if (icon) {
                icon.classList.remove('fa-moon');
                icon.classList.add('fa-sun');
            }
            if (btn) {
                btn.setAttribute('title', 'Switch to light mode');
            }
            localStorage.setItem('theme', 'dark');
        }
    }
    
    document.addEventListener('DOMContentLoaded', function() {
        const savedTheme = localStorage.getItem('theme');
        const icon = document.getElementById('themeIcon');
        const btn = document.getElementById('themeToggleBtn');
        const isAuthenticated = @Json.Serialize(User?.Identity?.IsAuthenticated ?? false);
        
        if (isAuthenticated && savedTheme === 'dark') {
            document.body.classList.add('dark-mode');
            if (icon) {
                icon.classList.remove('fa-moon');
                icon.classList.add('fa-sun');
            }
            if (btn) {
                btn.setAttribute('title', 'Switch to light mode');
            }
        } else {
            document.body.classList.remove('dark-mode');
            if (icon) {
                icon.classList.remove('fa-sun');
                icon.classList.add('fa-moon');
            }
            if (btn) {
                btn.setAttribute('title', 'Switch to dark mode');
            }
        }
    });
</script>

@await RenderSectionAsync("Scripts", required: false)
<script>
    (function () {
        const toast = document.getElementById('globalToast');
        if (!toast) {
            return;
        }

        let message = '';
        const serverMessage = @Html.Raw(JsonSerializer.Serialize(globalToastMessage ?? string.Empty));
        if (serverMessage) {
            message = serverMessage;
            try {
                if (window.sessionStorage) {
                    window.sessionStorage.removeItem('aor_form_notification');
                }
            } catch (storageCleanupError) {
                console.warn('Unable to clear sessionStorage toast state', storageCleanupError);
            }
        } else {
            try {
                if (window.sessionStorage) {
                    const stored = window.sessionStorage.getItem('aor_form_notification');
                    if (stored) {
                        message = stored;
                        window.sessionStorage.removeItem('aor_form_notification');
                    }
                }
            } catch (storageError) {
                console.warn('Unable to access sessionStorage for toast message', storageError);
            }
        }

        if (!message) {
            return;
        }

        toast.textContent = message;
        toast.classList.add('show');

        setTimeout(() => {
            toast.classList.remove('show');
        }, 3000);
    })();
</script>
</body>
</html>
